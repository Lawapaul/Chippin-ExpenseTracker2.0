<%-layout("./boilerplate/boilerplate_HomePage")%>
<div class="expense-summary-container">
    <div class="expense-card">
        <% if(user){ %>
            <div class="amount"><%= user %></div>
            <div class="label"><%=currentUser.name %></div>
        <% } else{ %>
            <div class="amount">NIL</div>
            <div class="label"><%=currentUser.name %></div>
        <%} %>
    </div>
    <div class="expense-card">
        <% if(front){ %>
            <div class="amount"><%=front%></div>
            <div class="label"><%=friend.name %></div>
        <% } else{ %>
            <div class="amount">NIL</div>
            <div class="label"><%=friend.name%></div>
        <% } %>
    </div>
    <div class="expense-card">
        <% if(typeof total_expenses !== 'undefined'){ %>
            <div class="amount"><%= total_expenses %></div>
            <div class="label">Total Expenses</div>
        <% } else{ %>
            <div class="amount">NIL</div>
            <div class="label">Total Expenses</div>
        <%}%>  
    </div>
</div>
<div class="show-expenses ps-3 pt-3 pe-3">
    <div class="title w-100">
        <h4 class="font-monospace text-white"><b>Expense List</b></h4>
        <p style="color: white; opacity: 0.6">View and manage your expenses</p>
    </div>
    <button type="button" class="add-expense-btn" data-bs-toggle="modal" data-bs-target="#exampleModalCenter">
        Add new Expense
    </button>
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content bg-dark">
                <div class="modal-header" style="border: none;">
                    <h1 class="modal-title text-white font-monospace" id="exampleModalCenterTitle" style="text-align: center;">Add Expense</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" style="border: none;">
                    <form method="post" action="/settlement/<%=id%>" class="needs-validation form-add-expense" novalidate>
                        <div class="div-currency w-10 d-flex justify-content-sm-between mb-4">
                            <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                                <input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off" checked value="dollor">
                                <label class="btn btn-outline-light" for="btnradio1">$</label>
                                <input type="radio" class="btn-check me-3" name="btnradio" id="btnradio2" autocomplete="off" value="ruppee">
                                <label class="btn btn-outline-light" for="btnradio2">â‚¹</label>
                            </div>
                            <input type="number" placeholder="Enter Amount" class="form-control bg-dark text-white amount ms-4" style="width: 500px; border: none; border-bottom: 0.5px solid white;" required name="amount">
                        </div>   
                        <label for="dateInput" style="color: white;">Date</label>
                        <input type="date" id="dateInput" class="form-control description mb-4 mt-1 bg-dark text-white" style="width: 100%; border: none; border-bottom: 0.5px solid white;" required name="date">
                        <textarea rows="5" cols="52" placeholder="Enter Description" style="padding-left: 10px; padding-top: 5px" class="bg-dark text-white form-control" name="description" required></textarea>
                        <select class="form-select bg-dark text-white mt-3" aria-label="Default select example" name="details">
                            <option value="you/2">Paid By you and split equally</option>
                            <option value="friend/2">Paid By friend and split equally</option>
                            <option value="you">Your Friend owes you</option>
                            <option value="friend">You owe your friend</option>
                        </select>
                        <div class="modal-footer" style="border: none;">
                            <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-danger">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="expense-table-container">
        <form method="post" action="/settlement/<%=id%>/settle" onsubmit="return confirm('Are you sure you want to settle up? This will remove all transactions between you and <%=friend.name%>.');">
            <button type="submit" class="btn btn-success mb-3">Settle Up</button>
        </form>
        <table class="expense-table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% if(result && result.length>0){ %>
                    <% for(let i in result){ %>
                        <tr>
                            <td><%= result[i].date ? result[i].date.toISOString ? result[i].date.toISOString().split('T')[0] : result[i].date.toString().split('T')[0] : '' %></td>
                            <td><%=result[i].description %></td>
                            <td><%=result[i].amount%></td>
                            <td><%=result[i].details %></td>
                        </tr>
                    <% } %>
                <% } else { %>
                    <tr>
                        <td colspan="4" style="text-align: center;">No expenses found</td>
                    </tr>
                <% } %>
                
            </tbody>
        </table>
    </div>
</div>