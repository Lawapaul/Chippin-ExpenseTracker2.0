<%- layout("./boilerplate/boilerplate_HomePage") %>
<!-- Improved summary styling -->
<div class="expense-summary-container" style="display: flex; justify-content: center; gap: 2rem; margin-top: 2rem; margin-bottom: 2rem;">
    <div class="expense-card" style="background: rgba(30,30,30,0.85); border-radius: 12px; box-shadow: 0 2px 12px rgba(0,0,0,0.2); padding: 1.5rem 2.5rem; text-align: center; min-width: 180px;">
        <div class="amount" style="font-size: 2.2rem; font-weight: bold; color: #fff;"><%= resultSum && resultSum[0] ? resultSum[0].t_sum : 0 %></div>
        <div class="label" style="font-size: 1.1rem; color: #bbb;">Total Expenses</div>
    </div>
    <div class="expense-card" style="background: rgba(30,30,30,0.85); border-radius: 12px; box-shadow: 0 2px 12px rgba(0,0,0,0.2); padding: 1.5rem 2.5rem; text-align: center; min-width: 180px;">
        <div class="amount" style="font-size: 2.2rem; font-weight: bold; color: #fff;"><%= currentMonthSum && currentMonthSum[0] ? currentMonthSum[0].t_sum : 0 %></div>
        <div class="label" style="font-size: 1.1rem; color: #bbb;">This Month</div>
    </div>
</div>
<div class="show-expenses ps-3 pt-3 pe-3">
    <div class="title w-100">
        <h4 class="font-monospace text-white"><b>Expense List</b></h4>
        <p style="color: white; opacity: 0.6">View and manage your expenses</p>
    </div>
    <button type="button" class="add-expense-btn" data-bs-toggle="modal" data-bs-target="#addExpenseModal">
        Add new Expense
    </button>
    <div class="modal fade" id="addExpenseModal" tabindex="-1" aria-labelledby="addExpenseModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content bg-dark">
                <div class="modal-header" style="border: none;">
                    <h1 class="modal-title text-white font-monospace" id="addExpenseModalTitle" style="text-align: center;">Add Expense</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" style="border: none;">
                    <form method="post" action="/expenses" class="needs-validation form-add-expense" novalidate>
                        <div class="div-currency w-10 d-flex justify-content-sm-between mb-4">
                            <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                                <input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off" checked value="dollor">
                                <label class="btn btn-outline-light" for="btnradio1">$</label>
                                <input type="radio" class="btn-check me-3" name="btnradio" id="btnradio2" autocomplete="off" value="ruppee">
                                <label class="btn btn-outline-light" for="btnradio2">â‚¹</label>
                            </div>
                            <input type="number" placeholder="Enter Amount" class="form-control bg-dark text-white amount ms-4" style="width: 300px; border: none; border-bottom: 0.5px solid white;" required name="amount">
                        </div>
                        <label for="dateInput" style="color: white;">Date</label>
                        <input type="date" id="dateInput" class="form-control description mb-4 mt-1 bg-dark text-white" style="width: 100%; border: none; border-bottom: 0.5px solid white;" required name="date">
                        <textarea rows="3" cols="52" placeholder="Enter Description" style="padding-left: 10px; padding-top: 5px" class="bg-dark text-white form-control" name="description" required></textarea>
                        <div class="modal-footer" style="border: none;">
                            <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-danger">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="expense-table-container mt-4">
        <table class="expense-table table table-dark table-striped">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% if(result && result.length > 0){ %>
                    <% for(let i = 0; i < result.length; i++){ %>
                        <tr>
                            <td><%= result[i].spend_date ? (result[i].spend_date.toISOString ? result[i].spend_date.toISOString().split('T')[0] : result[i].spend_date.toString().split('T')[0]) : '' %></td>
                            <td><%= result[i].description %></td>
                            <td><%= result[i].amount %></td>
                            <td>
                                <form method="POST" action="/expenses/delete/<%= result[i]._id %>?_method=DELETE" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this expense?');">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% } %>
                <% } else { %>
                    <tr>
                        <td colspan="4" style="text-align: center;">No expenses found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
